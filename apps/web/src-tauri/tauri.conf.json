{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "carti-vault",
  "version": "0.1.0",
  "identifier": "com.cartivault.com",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Carti Vault",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "additionalBrowserArgs": "--disable-web-security"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
