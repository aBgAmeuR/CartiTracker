{
  "name": "server",
  "private": true,
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "dotenv -e ../../.env -- tsdown",
    "check-types": "dotenv -e ../../.env -- tsc -b",
    "compile": "dotenv -e ../../.env -- bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
    "start": "dotenv -e ../../.env -- node dist/index.js",
    "db:local": "dotenv -e ../../.env -- turso dev --db-file local.db",
    "db:push": "dotenv -e ../../.env -- drizzle-kit push",
    "db:studio": "dotenv -e ../../.env -- drizzle-kit studio",
    "db:generate": "dotenv -e ../../.env -- drizzle-kit generate",
    "db:migrate": "dotenv -e ../../.env -- drizzle-kit migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "zod": "^4.0.2",
    "@orpc/server": "^1.5.0",
    "@orpc/client": "^1.5.0",
    "elysia": "^1.2.25",
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/node": "^1.2.6",
    "drizzle-orm": "^0.44.2",
    "@libsql/client": "^0.15.9",
    "better-auth": "^1.3.4"
  },
  "devDependencies": {
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "tsx": "^4.19.2",
    "@types/node": "^22.13.11",
    "drizzle-kit": "^0.31.2"
  }
}
